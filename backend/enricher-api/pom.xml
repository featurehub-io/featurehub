<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>io.featurehub.api</groupId>
  <artifactId>enricher-api</artifactId>
  <version>1.1-SNAPSHOT</version>
  <name>enricher-api</name>

  <description>
    This provides an enriching API so that features that are published as updated get enriched by the dacha layer,
    and republished in their current entireity. It offloads stress from  the MR layers to query the database and extract a
    full status of the features for an environment.
  </description>

  <url>https://featurehub.io</url>
  <developers>
    <developer>
      <email>irina@featurehub.io</email>
      <id>isouthwell</id>
      <name>Irina Southwell</name>
      <organization>Anyways Labs Ltd</organization>
    </developer>

    <developer>
      <email>richard@featurehub.io</email>
      <id>rvowles</id>
      <name>Richard Vowles</name>
      <organization>Anyways Labs Ltd</organization>
    </developer>
  </developers>

  <licenses>
    <license>
      <name>Apache 2 with Commons Clause</name>
      <url>https://github.com/featurehub-io/featurehub/blob/master/LICENSE.txt</url>
    </license>
  </licenses>

  <dependencies>
    <!-- we need it for the full feature stuff -->
    <dependency>
      <groupId>io.featurehub.mr</groupId>
      <artifactId>dacha-api</artifactId>
      <version>1.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>io.featurehub.mr</groupId>
      <artifactId>mr-api</artifactId>
      <version>1.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>io.featurehub.common</groupId>
      <artifactId>common-web</artifactId>
      <version>1.1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>io.featurehub.composites</groupId>
      <artifactId>composite-logging</artifactId>
      <version>[1.3-SNAPSHOT, 2)</version>
    </dependency>
    <dependency>
      <groupId>io.featurehub.composites</groupId>
      <artifactId>composite-jersey</artifactId>
      <version>[1.1, 2)</version>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>app-release</id>
      <!-- otherwise don't active in tiles -->
      <activation>
        <property>
          <name>app-release</name>
          <value>true</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>io.featurehub.tooling</groupId>
            <artifactId>maven-openapi-publisher</artifactId>
            <version>1.2</version>
            <executions>
              <execution>
                <id>publish</id>
                <goals><goal>publish</goal></goals>
                <phase>initialize</phase>
                <configuration>
                  <alwaysIncludeTagValues>
                    <alwaysIncludeTagValue>enricher</alwaysIncludeTagValue>
                  </alwaysIncludeTagValues>
                  <apiSource>${project.build.directory}/final.yaml</apiSource>
                  <releaseFolder>${project.basedir}/../../infra/api-bucket/files/webhooks</releaseFolder>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>api-update</id>
      <activation>
        <property>
          <name>!app-release</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>io.featurehub.tooling</groupId>
            <artifactId>maven-openapi-publisher</artifactId>
            <version>1.2</version>
            <executions>
              <execution>
                <id>export</id>
                <goals><goal>reconcile</goal></goals>
                <phase>initialize</phase>
                <configuration>
                  <alwaysIncludeTagValues>
                    <alwaysIncludeTagValue>enricher</alwaysIncludeTagValue>
                  </alwaysIncludeTagValues>
                  <apiSource>${project.build.directory}/final.yaml</apiSource>
                  <releaseFolder>${project.basedir}/../../infra/api-bucket/files/webhooks</releaseFolder>
                </configuration>
              </execution>
            </executions>
          </plugin>

        </plugins>
      </build>
    </profile>

  </profiles>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>extract common model</id>
            <phase>initialize</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>io.featurehub.mr</groupId>
                  <artifactId>dacha-api</artifactId>
                  <version>1.1-SNAPSHOT</version>
                  <classifier>dacha-components</classifier>
                  <type>yaml</type>
                  <outputDirectory>${project.basedir}/target</outputDirectory>
                  <destFileName>dacha-common.yaml</destFileName>
                </artifactItem>
                <artifactItem>
                  <groupId>io.featurehub.mr</groupId>
                  <artifactId>mr-api</artifactId>
                  <version>1.1-SNAPSHOT</version>
                  <classifier>api-common</classifier>
                  <type>yaml</type>
                  <outputDirectory>${project.basedir}/target</outputDirectory>
                  <destFileName>e2e-common.yaml</destFileName>
                </artifactItem>
              </artifactItems>
              <overWriteReleases>true</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>cd.connect.maven</groupId>
        <artifactId>merge-yaml-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>combine</id>
            <goals>
              <goal>mergeYaml</goal>
            </goals>
            <phase>initialize</phase>
            <configuration>
              <files>
                <file>${project.basedir}/enricher-api.yaml</file>
                <file>${project.basedir}/target/dacha-common.yaml</file>
                <file>${project.basedir}/target/e2e-common.yaml</file>
              </files>
              <finalYaml>${project.basedir}/target/final.yaml</finalYaml>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.openapitools</groupId>
        <artifactId>openapi-generator-maven-plugin</artifactId>
        <version>7.18.0</version>
        <dependencies>
          <dependency>
            <groupId>cd.connect.openapi</groupId>
            <artifactId>connect-openapi-jersey3</artifactId>
            <version>9.5</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <id>featurehub-api</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <output>${project.basedir}/target/generated-sources/api</output>
              <apiPackage>io.featurehub.enriched.api</apiPackage>
              <!-- we overlap the models -->
              <modelPackage>io.featurehub.mr.model</modelPackage>
              <inputSpec>${project.basedir}/target/final.yaml</inputSpec>
              <generatorName>jersey3-api</generatorName>
              <generateApis>false</generateApis>

              <additionalProperties>
                <additionalProperty>openApiNullable=false</additionalProperty>
                <additionalProperty>prometheus=true</additionalProperty>
              </additionalProperties>

              <configOptions>
                <configOption>
                  <name>useBeanValidation</name>
                  <value>true</value>
                </configOption>
              </configOptions>
            </configuration>
          </execution>
          <execution>
            <id>internal-enricher-api</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <output>${project.basedir}/target/generated-sources/api</output>
              <apiPackage>io.featurehub.enriched.api</apiPackage>
              <!-- we overlap the models -->
              <modelPackage>io.featurehub.mr.model</modelPackage>
              <inputSpec>${project.basedir}/internal-enricher-api.yaml</inputSpec>
              <generatorName>jersey3-api</generatorName>
              <generateApis>false</generateApis>

              <additionalProperties>
                <additionalProperty>openApiNullable=false</additionalProperty>
                <additionalProperty>prometheus=true</additionalProperty>
              </additionalProperties>

              <configOptions>
                <configOption>
                  <name>useBeanValidation</name>
                  <value>true</value>
                </configOption>
              </configOptions>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-generated-source</id>
            <phase>initialize</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${project.build.directory}/generated-sources/api/src/gen</source>
              </sources>
            </configuration>
          </execution>
          <execution>
            <id>attach-components-yaml</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>target/final.yaml</file>
                  <type>yaml</type>
                  <classifier>enricher-components</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>io.repaint.maven</groupId>
        <artifactId>tiles-maven-plugin</artifactId>
        <version>2.32</version>
        <extensions>true</extensions>
        <configuration>
          <filtering>false</filtering>
          <tiles>
            <tile>io.featurehub.tiles:tile-java:[1.1,2)</tile>
          </tiles>
        </configuration>
      </plugin>
    </plugins>
  </build>


</project>
