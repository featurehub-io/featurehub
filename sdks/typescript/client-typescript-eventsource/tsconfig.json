{
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "ES2020",
    "outDir": "lib",
    "newLine": "lf",
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": [
    "app/**/*",
    "spec/**/*"
  ],
  "types": [
    "node",
    "mocha"
  ],
  "exclude": [
    "node_modules",
    "target/dist"
  ]

}
